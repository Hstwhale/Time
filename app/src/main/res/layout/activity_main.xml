<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/previousRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="hello\nworld" />

    <EditText
        android:id="@+id/recordEditText"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="300dp"
        android:hint="回首向来萧瑟处"
        android:padding="10dp" />

    <EditText
        android:id="@+id/tiYanText"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_below="@id/recordEditText"
        android:layout_marginTop="43dp"
        android:hint="也无风雨也无晴"
        android:padding="10dp" />

    <EditText
        android:id="@+id/ratingText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tiYanText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="189dp"
        android:layout_marginTop="79dp"
        android:hint="体验1-5"
        android:inputType="number"
        android:padding="5dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="记录" />

    <Button
        android:id="@+id/showButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="80dp"
        android:text="查看" />

</RelativeLayout>